<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="remake.pagamentos_vila_lobos">
        <title>Formulário - Pagamentos Vila Lobos</title>
        <t t-call="website.layout">
            <div class="mt-5 mb-5 container">
                <div class="row">
                    <div class="col-sm-4">
                        <img
                            class="img-thumbnail rounded float-left"
                            t-attf-src='remake/static/description/icon.png'
                            style="height: 270px; width: 270px;"
                        />
                        <h3>Formulário
                        </h3>
                    </div>
                    <div class="col-sm-8">
                        <form
                            t-attf-action="/pagamentovilalobos"
                            method="post"
                            enctype="multipart/form-data"
                        >
                            <div class="form-group">
                                <label style='display:block'>Empresa:</label>
                                <input required='True' name='empresa' type='text'></input>
                            </div>
                            <div class="form-group">
                                <label style='display:block'>Numero da nota:</label>
                                <input required='True' name='numeroNota' type='text'></input>
                            </div>
                            <div class="form-group">
                                <label style='display:block'>Valor da nota:</label>
                                <input required='True' name='valorNota' type='text'></input>
                            </div>
                            <div class="form-group">
                                <label style='display:block'>Anexar NF:</label>
                                <input name='anexo' type='file' multiple='True'></input>
                            </div>
                            <div class="form-group">
                                <label style='display:block'>Valor da nota:</label>
                                <input name='anexo' type='file' multiple='True'></input>
                            </div>
                            <input class="btn btn-primary" type="submit" value="Enviar" />
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>